@{
    ViewData["Title"] = "Register";
    Layout = "_Layout2";
}
@model DataImporter.Models.AccountModel.RegisterModel

<div class="limiter">
    <div class="container-login100">
        <div class="wrap-login100">
            <div class="login100-pic js-tilt" data-tilt>
                <img src="/loginLayout/images/img-01.png" alt="IMG">
            </div>

            <form class="form-horizontal" method="post" asp-controller="Account" asp-action="Register">
                <input type="hidden" asp-for="ReturnUrl" />
                <span class="login100-form-title">
                    Register
                </span>

                <div class="wrap-input100 validate-input" data-validate="Valid email is required: ex@abc.xyz">
                    <input class="input100" type="text" asp-for="Name" placeholder="User Name" required="required">
                    <span class="focus-input100"></span>
                    <span class="symbol-input100">
                        <i class="fa fa-user" aria-hidden="true"></i>

                    </span>
                </div>
                <div class="wrap-input100 validate-input" data-validate="Valid email is required: ex@abc.xyz">
                    <input class="input100" type="email" asp-for="Email" placeholder="Email" required="required">
                    <span class="focus-input100"></span>
                    <span class="symbol-input100">
                        <i class="fa fa-envelope" aria-hidden="true"></i>
                    </span>
                </div>
                <div class="wrap-input100 validate-input">
                    <input class="input100" type="number" asp-for="Age" placeholder="Age"
                           required="required">
                    <span class="focus-input100"></span>
                    <span class="symbol-input100">
                        <i class="fa fa-user" aria-hidden="true"></i>

                    </span>
                </div>

                <div class="wrap-input100 validate-input" data-validate="Password is required">
                    <input class="input100" asp-for="Password" name="Password" placeholder="Password" required="required">
                    <span class="focus-input100"></span>
                    <span class="symbol-input100">
                        <i class="fa fa-lock" aria-hidden="true"></i>
                    </span>
                </div>
                <div class="wrap-input100 validate-input" data-validate="Password is required">
                    <input class="input100" asp-for="ConfirmPassword" name="ConfirmPassword" placeholder="Confirm Password" required="required">
                    <span class="focus-input100"></span>
                    <span class="symbol-input100">
                        <i class="fa fa-lock" aria-hidden="true"></i>
                    </span>
                </div>
                <span style="color:black; margin-left:5px">@ViewBag.Message</span>
                <input type="hidden" id="foo" name="foo" />
                <div class="container-login100-form-btn">
                    <input type="hidden" id="foo" name="foo" />
                    <button type="submit" class="login100-form-btn">
                        Register
                    </button>
                </div>



                <div class="text-center p-t-136">
                    <a class="txt2" asp-controller="Account" asp-action="Login">
                        Already have an account ? login here
                        <i class="fa fa-long-arrow-right m-l-5" aria-hidden="true"></i>
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="https://www.google.com/recaptcha/api.js?render=6LfA81ocAAAAAInGiexBq-KLtZGpw6mzugcu-bWi"></script>
    <script>
        grecaptcha.ready(function () {
            grecaptcha.execute('6LfA81ocAAAAAInGiexBq-KLtZGpw6mzugcu-bWi', { action: 'Register' }).then(function (token) {
                document.getElementById("foo").value = token;
            });
        });
    </script>
}