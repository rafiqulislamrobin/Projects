@model ExportFileModel
@{
    ViewData["Title"] = "ViewContacts";
}
@section Styles
{
    <link rel="stylesheet" href="/user/plugins/datatables-bs4/css/dataTables.bootstrap4.css">
    <link href="~/css/chosen.min.css" rel="stylesheet" />
}

@section Scripts
{
    <script src="/user/plugins/datatables/jquery.dataTables.js"></script>
    <script src="/user/plugins/datatables-bs4/js/dataTables.bootstrap4.js"></script>
    <script>

        $(function () {
            $('#selectTwo').chosen();
        });
        $(function () {

            $('#Contact').DataTable({
                "paging": true,
                "lengthChange": false,
                "searching": true,
                "ordering": true,
                "autoWidth": false,
                "responsive": true

            });
        });
    </script>

    <script src="~/js/chosen.jquery.min.js"></script>
}

<!-- Content Header (Page header) -->
<section class="content-header">

    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h3 style="color:black;">Contacts</h3>
            </div>

        </div>
    </div><!-- /.container-fluid -->
    <form method="post" enctype="multipart/form-data" asp-controller="DataImporter" asp-action="ViewContacts" asp-antiforgery="true">


        <div class="card w-75" style="background-image: -webkit-linear-gradient(-135deg, #abbaab,#ffffff); margin-bottom: 0">
            <div class="card-body">
                <div style="display: flex;justify-content:center;">
                    <div class="mt-4" style="display: flex; ">

                        <div class="form-group" style="color:black">
                            <label asp-for="DateFrom" style="margin-left:-20px">Date From </label>
                            <input asp-for="DateFrom" class="form-control" id="datefrom"
                                   type="date" style="margin-left:-20px" />
                        </div>
                        <div class="form-group" style="color:black">
                            <label asp-for="DateTo" style="margin-left:-10px">Date To</label>
                            <input asp-for="DateTo" class="form-control" id="dateTo"
                                   type="date" style="margin-left:-10px" />
                        </div>

                        <div class="card-body" type="select" style="color: black;margin-top:18px">
                            <label for="select group" id="groupid">Choice group:  </label>
                            @Html.DropDownListFor(m => m.GroupId, ViewBag.GroupList as SelectList, "--Select A Group--", new { required = "required", id = "selectTwo" })


                        </div>
                        <input type="hidden" asp-for="GroupId" value="@Model.GroupId " id="groupid" />
                        <div style="margin-top: 30px">

                            <button type="submit" class="btn btn-primary"
                                    style="color: black;background-color: white;border-color:white; ">
                                search
                            </button>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </form>

    <br>
    <!-- Main content -->

    @if (ViewBag.ContactListNullMassage == null)
    {
        @if (Model.GroupId != 0)
        {

            <form method="post" enctype="multipart/form-data" asp-controller="DataImporter" asp-action="ViewContacts">
                <section class="content">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-12">
                                <div class="card">
                                    <div class="card-header" style="color: black;background-color: #9c94d6">
                                        <h3 class="card-title">List</h3>
                                    </div>
                                    <!-- /.card-header -->
                                    <div class="card-body">
                                        <table id="Contact" class="table table-bordered table-hover" method="post">
                                            <thead>
                                                <tr>
                                                    @{
                                                        foreach (var item in Model.Headers)
                                                        {
                                                            <th>@item</th>
                                                        }
                                                    }
                                                </tr>
                                            </thead>
                                            <tbody>

                                                @foreach (var item in Model.Items)
                                                {
                                                    <tr>
                                                        @foreach (var i in item)
                                                        {
                                                            <td>@i</td>
                                                        }
                                                    </tr>
                                                }
                                            </tbody>

                                        </table>

                                        <partial name="_deletePartial" />
                                    </div>
                                    <!-- /.card-body -->
                                </div>

                            </div>
                            <!-- /.row -->
                        </div>
                    </div>
                    <!-- /.container-fluid -->
                </section>
                <!-- /.content -->
                <!-- /.content-wrapper -->

            </form>
        }
    }

</section>




