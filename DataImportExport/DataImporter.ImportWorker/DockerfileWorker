FROM mcr.microsoft.com/dotnet/sdk:5.0 AS build
WORKDIR /src
RUN apt-get update && apt-get install -y nodejs
COPY ["DataImporter.ImportWorker/*.csproj", "DataImporter.ImportWorker/"]
COPY ["DataImporter.Common/*.csproj", "DataImporter.Common/"]
COPY ["DataImporter.Data/*.csproj", "DataImporter.Data/"]
COPY ["DataImporter.Info/*.csproj", "DataImporter.Info/"]
RUN dotnet restore "DataImporter.ImportWorker/DataImporter.ImportWorker.csproj"
COPY . .
WORKDIR "/src/DataImporter.ImportWorker"
RUN dotnet build "DataImporter.ImportWorker.csproj" -c Release -o /app

FROM build AS publish
RUN dotnet publish "DataImporter.ImportWorker.csproj" -c Release -o /app

FROM build AS final
WORKDIR /app
COPY --from=publish /app .
ENTRYPOINT ["dotnet", "DataImporter.ImportWorker.dll"]